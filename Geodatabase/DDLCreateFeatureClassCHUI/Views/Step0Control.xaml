<UserControl x:Class="DDLCreateFeatureClassCHUI.WizardSteps.Step0Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:DDLCreateFeatureClassCHUI.ViewModel"
             xmlns:local="clr-namespace:DDLCreateFeatureClassCHUI.WizardSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="Datastore Datasets and Definitions" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
      <TextBlock Text="Datastore Type:" Width="110" VerticalAlignment="Center"/>
      <ComboBox Width="200" VerticalAlignment="Center" ItemsSource="{Binding DatastoreCategories}" 
							SelectedItem="{Binding DatastoreCategory}" DisplayMemberPath="Name">
      </ComboBox>
    </StackPanel>
    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
      <TextBlock Text="Data Path:" Width="110" VerticalAlignment="Center"/>
      <TextBox Width="210" VerticalAlignment="Center" Text="{Binding DataPath, Mode=TwoWay}"
							 Style="{DynamicResource {x:Type TextBox}}" 
               />
      <!--Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}"-->
      <Button Width="80" Margin="5,0,0,0"
              Content="{Binding CmdDataPathContent}"
							Command="{Binding CmdDataPath}" 
              Visibility="{Binding CmdDataPathVisible}"/>
    </StackPanel>
  </Grid>
</UserControl>