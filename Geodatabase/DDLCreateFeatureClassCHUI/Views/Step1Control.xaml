<UserControl x:Class="DDLCreateFeatureClassCHUI.WizardSteps.Step1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDLCreateFeatureClassCHUI.WizardSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
  <!--d:DataContext="{Binding Source={x:Static local:ViewModel.Step1ViewModel}}"-->

  <StackPanel>
    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Name" Width="60" VerticalAlignment="Center"/>
            <TextBox Width="350" BorderBrush="Red" BorderThickness="2" Text="{Binding Name}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Alias" Width="60" VerticalAlignment="Center"/>
            <TextBox Width="350" Text="{Binding Alias}"/>
        </StackPanel>
        <GroupBox Header="Feature Class Type" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Type of features stored in the feature class." Margin="0,0,0,4"/>
                <ComboBox Width="200" SelectedValue="{Binding FeatureClassType}" ItemsSource="{Binding FeatureClassTypes}" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Geometric Properties" Margin="0,0,0,8">
            <StackPanel>
        <CheckBox Content="M Values - Coordinates include M values used to store route data." IsChecked="{Binding MValues}"/>
                <CheckBox Content="Z Values - Coordinates include Z values used to store 3D data." IsChecked="{Binding ZValues}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>