<UserControl x:Class="DDLCreateFeatureClassCHUI.WizardSteps.Step2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDLCreateFeatureClassCHUI.WizardSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Padding="10">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- New Field Inputs -->
    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
      <TextBox Width="150" Margin="0,0,8,0" Text="{Binding NewFieldName, UpdateSourceTrigger=PropertyChanged}" />
      <!--PlaceholderText="Field Name"-->
      <ComboBox Width="150" Margin="0,0,8,0" SelectedItem="{Binding NewDataType, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding DataTypes}" />
      <Button Content="Add Field" Command="{Binding AddFieldCommand}"/>
    </StackPanel>

    <!-- Import/Delete Buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,8,0">
      <Button Content="Delete" Width="70" Command="{Binding DeleteFieldCommand}"/>
    </StackPanel>

    <!-- DataGrid -->
    <DataGrid Grid.Row="2" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False"
                  ItemsSource="{Binding Fields}" SelectedItem="{Binding Path=SelectedField, Mode=TwoWay}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Field Name" Width="*" Binding="{Binding FieldName}"/>
        <DataGridTextColumn Header="Data Type" Width="*" Binding="{Binding DataType}"/>
      </DataGrid.Columns>
      <DataGrid.RowStyle>
        <Style TargetType="DataGridRow">
          <Setter Property="Height" Value="28"/>
        </Style>
      </DataGrid.RowStyle>
    </DataGrid>
  </Grid>
</UserControl>