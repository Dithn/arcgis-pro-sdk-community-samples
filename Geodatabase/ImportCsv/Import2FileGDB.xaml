<UserControl x:Class="ImportCsv.Import2FileGDBView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:ui="clr-namespace:ImportCsv"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"                       
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{Binding Path=ui.Import2FileGDBViewModel}">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <DockPanel Grid.Row="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" >
      <TextBlock Text="{Binding Heading}" Style="{DynamicResource Esri_TextBlockDockPaneHeader}">
        <TextBlock.ToolTip>
          <WrapPanel Orientation="Vertical" MaxWidth="300">
            <TextBlock Text="{Binding Heading}" TextWrapping="Wrap"/>
          </WrapPanel>
        </TextBlock.ToolTip>
      </TextBlock>
    </DockPanel>
    <Grid Grid.Row="1" Margin="5">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      
      <TextBlock Grid.Row="0" Grid.Column="0" Text="CSV input file:  " VerticalAlignment="Center" />
      <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CsvFilePath, Mode=TwoWay}" VerticalAlignment="Center" />
      <Button Grid.Row="0" Grid.Column="2" Style="{DynamicResource Esri_Button}" 
             HorizontalAlignment="Right" VerticalAlignment="Center"
             Command="{Binding CmdFindCsv}">
        <Button.Content>
          <StackPanel Orientation="Horizontal">
            <Image Source="{Binding CmdFindCsvImageSrc}" Margin="3" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Stretch="None"></Image>
            <TextBlock HorizontalAlignment="Center" Text="Find CSV" 
            VerticalAlignment="Bottom" 
            Margin="3,5,10,5" Style="{DynamicResource H5TextBlock}"/>
          </StackPanel>
        </Button.Content>
      </Button>
      
      <TextBlock Grid.Row="1" Grid.Column="0" Text="Target GDB:" VerticalAlignment="Center" />
      <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GDBPath, Mode=TwoWay}" VerticalAlignment="Center" />
      <Button Grid.Row="1" Grid.Column="2" Style="{DynamicResource Esri_Button}" 
             HorizontalAlignment="Right" VerticalAlignment="Center"
             Command="{Binding CmdGDBPath}">
        <Button.Content>
          <StackPanel Orientation="Horizontal">
            <Image Source="{Binding CmdGDBPathImageSrc}" Margin="3" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Stretch="None"></Image>
            <TextBlock HorizontalAlignment="Center" Text="Save in GDB" 
            VerticalAlignment="Bottom" 
            Margin="3,5,10,5" Style="{DynamicResource H5TextBlock}"/>
          </StackPanel>
        </Button.Content>
      </Button>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="New Featureclass name:" VerticalAlignment="Center" />
      <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewFCName, Mode=TwoWay}" VerticalAlignment="Center" />
      <Button Grid.Row="2" Grid.Column="2" Style="{DynamicResource Esri_Button}" 
             HorizontalAlignment="Right" VerticalAlignment="Center"
             Command="{Binding CmdCreateNewFeatureClass}">
        <Button.Content>
          <StackPanel Orientation="Horizontal">
            <Image Source="{Binding CmdCreateNewFeatureClassImageSrc}" Margin="3" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Stretch="None"></Image>
            <TextBlock HorizontalAlignment="Center" Text="Import into F/C" 
            VerticalAlignment="Bottom" 
            Margin="3,5,10,5" Style="{DynamicResource H5TextBlock}"/>
          </StackPanel>
        </Button.Content>
      </Button>

    </Grid>
  </Grid>
</UserControl>